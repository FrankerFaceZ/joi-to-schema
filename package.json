		"test-bare": "cross-env NODE_ENV=test mocha",
		"coverage": "nyc report --reporter=text-lcov | coveralls",
		"docs": "rimraf docs && jsdoc -c jsdoc.json"
	},
	"devDependencies": {
		"@hapi/joi": "^15.0.3",
		"chai": "^4.2.0",
		"coveralls": "^3.0.4",
		"cross-env": "^5.2.0",
		"docdash": "^1.1.1",
		"eslint": "^5.16.0",
		"eslint-plugin-mocha": "^5.3.0",
		"jsdoc": "^3.6.3",
		"mocha": "^6.1.4",
		"nodemon": "^1.19.1",
		"nyc": "^14.1.1",
		"rimraf": "^3.0.0"
	},
	"engines": {
		"node": ">= 8"
	},
	"dependencies": {
		"lodash.get": "^4.4.2",
		"lodash.set": "^4.3.2"
